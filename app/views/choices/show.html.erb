<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">#<%= @choice.rank %>: <%= User.find(@choice.target_id).name %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">

              <!-- COMMENT OUT UNTIL DISCLOSURE TIME -->
              <!-- <dt>Matched?</dt>
              <% if @choice.matched == true %>
          <dd>Yes</dd>
          <% else %>
          <dd>No</dd>
          <% end %> -->


          <dt>Let him/her know even if no match?</dt>
          <% if @choice.disclose_if_no_match == true %>
            <dd>Yes</dd>
          <% else %>
            <dd>No</dd>
          <% end %>


        </dl>
        <div class="btn-group btn-group-justified">

          <a href="/choices" class="btn btn-primary">
            <i class="fa fa-chevron-left"></i>
          </a>

          <a href="/choices/<%= @choice.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>

          <a href="/delete_choice/<%= @choice.id %>" class="btn btn-danger" rel="nofollow">
            <i class="fa fa-trash-o"></i>
          </a>

        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>

<!-- End responsive panel example -->
